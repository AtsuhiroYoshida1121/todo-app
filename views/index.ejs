<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TODO APP</title>
    <link rel="stylesheet" href="/css/style_copy.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a class="header-logo" href="/">TODO APP</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>TODOリスト</h1>
        <a href="/new" class="new-button">新規作成</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span>タスク</span>
        </div>


        <ul class="table-body">
            <% items.forEach((item) => {%>
            <li>
              <div class="item-data">
                <span class="name-column">
                  <%=item.name%>
                </span>
              </div>
              <div class="item-menu">
                <form action="/delete/<%= item.id %>" method="post">
                  <input type="submit" value="削除">
                  <a href="/edit/<%= item.id %>">編集</a>
                </form>
              </div>
            </li>
            <%});%>
        </ul>
      </div>
    </div>
  </body>
</html>